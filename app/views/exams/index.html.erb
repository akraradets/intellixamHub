<p id="notice"><%= notice %></p>

<h1>Exams</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th>Title</th>
      <th>Description</th>
      <th>Format</th>
      <th>Fee</th>
      <th>Max enrollment</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.owner %></td>
        <td><%= exam.title %></td>
        <td><%= exam.description %></td>
        <td><%= exam.format %></td>
        <td><%= exam.fee %></td>
        <td><%= exam.max_enrollment %></td>
        <td><%= exam.created_by %></td>
        <td><%= exam.updated_by %></td>
        <td><%= link_to 'Show', exam %></td>
        <td><%= link_to 'Edit', edit_exam_path(exam) %></td>
        <td><%= link_to 'Destroy', exam, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

