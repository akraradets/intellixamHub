<script>
  setMenuActive("#navbar_exam");
</script>
<p id="notice"><%= notice %></p>

<h1>Exams</h1>
<div class="row">
  <div class="col-12 float-right">
    <a class="btn btn-info float-right" href="<%= new_admins_organization_path %>">
      <i class="fas fa-plus-circle" style="margin-right: 10px;"></i> New Organization Account
    </a>
  </div>
</div>
<table class="table table-striped table-sm table-hover" style="margin-top: 10px;">
  <thead class="thead-dark">
    <tr>
      <th>Owner</th>
      <th>Title</th>
      <th>Enrollment</th>
      <th>Status</th>
      <th>Enroll Period</th>
      <th>Exam Period</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @exams.each do |exam| %>
      <tr>
        <td><%= exam.owner.name %></td>
        <td><%= link_to exam.title, admins_exam_show_path(exam.title) %></td>
        <td><%= exam.candidates.count %>/<%= exam.max_enrollment %></td>
        <td><%= exam.status %></td>
        <td><%= exam.enroll_timeslot %></td>
        <td><%= exam.exam_timeslot %></td>
        <td>
          <a href="<%= edit_admins_organization_path(exam) %>" >
            <i class="fas fa-edit"></i>
          </a>
        </td>
        <td>
          <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= admins_organization_path(exam) %>">
            <i class="far fa-trash-alt"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Exam', new_exam_path %>