<% if admins_organization.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <!-- <h4 class="alert-heading">Error(s)</h4> -->
    <!-- <ul> -->
      <% admins_organization.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    <!-- </ul> -->
  </div>
<% end %>
<%= form_with(url:admins_organizations_path, model: admins_organization, local: true) do |form| %>
  <!-- Section 1: Organization Info -->
  <div class="row" style="margin-top: 15px;">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Organization Info.</h5>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Organization Name</label>
            <div class="col-md-9">
              <%= form.text_field :name, class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Tax Number</label>
            <div class="col-md-9">
              <%= form.text_field :tax_id, class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Address</label>
            <div class="col-md-9">
              <%= form.text_area :address, class: "form-control", size: '10x5'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Section 2: Contact Info -->
  <div class="row" style="margin-top: 15px;">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Contact Info.</h5>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Contact Name</label>
            <div class="col-md-9">
              <%= form.text_field :contact_name, class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Contact Phone No</label>
            <div class="col-md-9">
              <%= form.text_field :phone_no, class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Contact Email</label>
            <div class="col-md-9">
              <%= form.email_field :email, class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Note</label>
            <div class="col-md-9">
              <%= form.text_area :note, class: "form-control", size: '10x5'%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Section 3: Log-in Accoutn Info -->
  <div class="row" style="margin-top: 15px;">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Log-in Account Info.</h5>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Username</label>
            <div class="col-md-9">
              <%= form.text_field :username, class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Password</label>
            <div class="col-md-9">
              <%= form.password_field :password, class: "form-control", required: true %>
            </div>
          </div>
          <div class="form-group row">
            <label class="col-md-3 col-form-label">Re-Type Password</label>
            <div class="col-md-9">
              <%= form.password_field :password_confirm, class: "form-control", required: true %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div >
  <div class="row" style="margin-top: 15px;">
    <div class="col-12">
      <button class="btn btn-success" type="submit" name="commit">
        <i class="far fa-save" style="margin-right: 10px;"></i>Create
      </button>
      <a class="btn btn-danger" href="<%= admins_organizations_path %>">
        <i class="fas fa-ban" style="margin-right: 10px;"></i>Back
      </a>
    </div>
  </div>
<% end %>