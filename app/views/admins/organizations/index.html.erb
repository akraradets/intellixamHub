<script>
  setMenuActive("#navbar_manage");
  setMenuActive("#navbar_manage_organizations");
</script>
<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table class="table table-striped table-sm table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Organization Name</th>
      <th>Username</th>
      <th>Contact Name</th>
      <th>Contact Email</th>
      <th>Contact Phone No</th>
      <th>Created Date</th>
      <th>Created By</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins_organizations.each do |org| %>
      <tr>
        <td><a href="<%= admins_organization_path(org) %>" ><%= org.name %></a></td>
        <td><%= org.username %></td>
        <td><%= org.contact_name %></td>
        <td><%= org.email %></td>
        <td><%= org.phone_no %></td>
        <td><%= org.created_at %></td>
        <td><%= org.created_by %></td>
        <td>
          <a href="<%= edit_admins_organization_path(org) %>" >
            <i class="fas fa-edit"></i>
          </a>
        </td>
        <td>
          <a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="<%= admins_organization_path(org) %>">
            <i class="far fa-trash-alt"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admins Organization', new_admins_organization_path %>
